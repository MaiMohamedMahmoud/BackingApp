<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_recipe_widget"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/card_view_margin"
        android:contentDescription="@string/image_widget" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipe_txt_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recipe_name_widget"
            android:textSize="@dimen/text_large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serving_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/serving_txt_widget"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/serving_number_txt_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>